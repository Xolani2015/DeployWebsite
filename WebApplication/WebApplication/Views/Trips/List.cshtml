@model IEnumerable<WebApplication.Models.Trip>

@{
    ViewData["Title"] = "TRIPS";
}

<h1>@ViewData["Title"]</h1>

<script>
    function SelectDriverType() {
        var selec = document.getElementById("DriverTypeId");
        var dis = selec.options[selec.selectedIndex].text;
        document.getElementById("mytext").value = dis;
    }

    function SelectGender() {
        document.getElementsByName('radio1')
            .forEach(radio => {
                if (radio.checked) {
                    document.getElementById("inGender").value = radio.value;
                }
            });
    }</script>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- /.col -->
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header p-2">
                        <ul class="nav nav-pills">
                            <li class="nav-item"><a class="btn btn-warning">Activity</a></li>
                            <li class="nav-item"><a asp-action="AddTrip" class="nav-link">Add</a></li>
                            <li class="nav-item"><a class="nav-link" href="#update" data-toggle="tab">Reports</a></li>
                        </ul>
                    </div><!-- /.card-header -->
                    <div class="card-body">
                        <div class="tab-content">
                            <div class="active tab-pane" id="update">
                                <!-- Post -->
                                <div class="card card-yellow">
                                    <div class="card-header">
                                        <h3 class="card-title">TRIPS</h3>
                                    </div>
                                    <!-- /.card-header -->
                                    <div class="card-body" style="background-color:white">
                                        <div class="row">
                                            <div>
                                                <div class="row">
                                                    <div class="col-12">
                                                        <div class="post">     
                                                            <div>
                                                                <div class="card-body p-0">
                                                                    <table class="table table-striped projects">
                                                                        <thead>
                                                                            <tr>
                                                                                <th style="width: 1%">
                                                                                    #
                                                                                </th>
                                                                                <th style="width: 20%">
                                                                                    Trip
                                                                                </th>
                                                                                <th style="width: 30%">
                                                                                    Passengers
                                                                                </th>
                                                                                <th>
                                                                                    Trip Capacity
                                                                                </th>
                                                                                <th style="width: 8%" class="text-center">
                                                                                    Status
                                                                                </th>
                                                                                <th style="width: 20%">
                                                                                </th>
                                                                            </tr>
                                                                        </thead>
                                                                        @foreach (var item in Model)
                                                                        {


                                                                            <tbody>
                                                                                <tr>
                                                                                    <td>
                                                                                        #@item.id
                                                                                    </td>
                                                                                    <td>
                                                                                        <a>
                                                                                            @item.PickUpArea
                                                                                        </a>
                                                                                        <br />
                                                                                        <small>
                                                                                            @item.DropOffArea
                                                                                        </small>
                                                                                    </td>
                                                                                    <td>
                                                                                        <ul class="list-inline">
                                                                                            <li class="list-inline-item">
                                                                                                <img alt="Avatar" class="table-avatar" src="~/images/avatar2.png">
                                                                                            </li>
                                                                                            <li class="list-inline-item">
                                                                                                <img alt="Avatar" class="table-avatar" src="~/images/avatar.png">
                                                                                            </li>
                                                                                            <li class="list-inline-item">
                                                                                                <img alt="Avatar" class="table-avatar" src="~/images/avatar3.png">
                                                                                            </li>
                                                                                            <li class="list-inline-item">
                                                                                                <img alt="Avatar" class="table-avatar" src="~/images/avatar04.png">
                                                                                            </li>
                                                                                        </ul>
                                                                                    </td>
                                                                                    <td class="project_progress">
                                                                                        <div class="progress progress-sm">
                                                                                            <div class="progress-bar bg-green" role="progressbar" aria-volumenow="57" aria-volumemin="0" aria-volumemax="100" style="width: 57%">
                                                                                            </div>
                                                                                        </div>
                                                                                        <small>
                                                                                            57% Complete
                                                                                        </small>
                                                                                    </td>
                                                                                    <td class="project-state">
                                                                                        <span class="badge badge-success">Success</span>
                                                                                    </td>
                                                                                    <td class="project-actions text-right">

                                                                                        @if (item.HasDriver == "false")
                                                                                        {
                                                                                            <a asp-action="Detailss" asp-route-id="@item.id" class="btn btn-warning btn-sm">
                                                                                                <i class="fas fa-folder">
                                                                                                </i>
                                                                                                View
                                                                                            </a>
                                                                                        }
                                                                                        @if (item.HasDriver == "true")
                                                                                        {
                                                                                            <a asp-action="Details" asp-route-id="@item.id" class="btn btn-warning btn-sm">
                                                                                                <i class="fas fa-folder">
                                                                                                </i>
                                                                                                View
                                                                                            </a>
                                                                                        }

                                                                                    </td>
                                                                                </tr>
                                                                            </tbody>
                                                                        }
                                                                    </table>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- /.card-body -->
                                </div>
                                <!-- Post -->
                                <!-- /.post -->
                            </div>
                            <!-- /.tab-pane -->
                                </div>
                            </div>
                            <!-- /.tab-pane -->
                            <!-- /.tab-pane -->
                        </div>
                        <!-- /.tab-content -->
                    </div><!-- /.card-body -->
                </div>
                <!-- /.nav-tabs-custom -->
            </div>
            <!-- /.col -->
</section>


