@model WebApplication.Models.Driver

@{
    ViewData["Title"] = "Add Driver";
}

<h1>Add Driver</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-lable"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Surname" class="control-lable"></label>
                <input asp-for="Surname" class="form-control" />
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email" class="control-lable"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="Cell" class="control-lable"></label>
                <input asp-for="Cell" class="form-control" />
                <span asp-validation-for="Cell" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DriverType" class="control-lable"></label>
                <input asp-for="DriverType" class="form-control" />
                <span asp-validation-for="DriverType" class="text-danger"></span>
            </div>

            <input type="submit" value="Create" class="btn btn-success" />
            <a asp-action="Index" class="btn btn-primary">&lt;&lt; Back</a>
        </form>
    </div>
</div>