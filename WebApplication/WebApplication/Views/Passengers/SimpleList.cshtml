@model IEnumerable<WebApplication.Models.Passenger>

@{
    ViewData["Title"] = "List Drivers";
}

<div>
    <h1 class="display-4">@ViewData["Title"]</h1>

    <p>
        <a asp-action="Add" class="btn btn-sm btn-success">Create New</a>
    </p>

    <table class="table table-striped table-bordered">
        <tr>
            <th>Full Name</th>
            <th>@Html.DisplayNameFor(model => model.Email)</th>
            <th>@Html.DisplayNameFor(model => model.Gender)</th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {

            <tr>
                <td>@item.Name @item.Surname</td>
                <td>@item.Email</td>
                <td>@item.Gender</td>

                <td style="text-align: center">
                    <a asp-action="Edit" asp-route-id="@item.id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Profile" asp-route-id="@item.id" class="btn btn-sm btn-info">Profile</a>
                    <a asp-action="Delete" asp-route-id="@item.id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </table>
</div>
