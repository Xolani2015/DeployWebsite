@model IEnumerable<WebApplication.Models.Passenger>

@{
    ViewData["Title"] = "Assigned Passengers";
}

<div>
    <h1 class="display-4">@ViewData["Title"]</h1>
    <div class="row">
        <div class="col-1">
            <p>
                <a asp-action="Add" class="btn btn-sm btn-dark">Add New Passenger</a>
            </p>
        </div>
        <div class="col-1">
            <p>
                <a asp-action="Add" class="btn btn-sm btn-default">Deactivated list</a>
            </p>
        </div>
        <div class="col-1">
            <p>
                <a asp-action="Add" class="btn btn-sm btn-dark">Deactivated list</a>
            </p>
        </div>
    </div>


    <table class="table table-striped table-bordered">
        @for (int i = 0; i < 2; i++)
        {
        }
        @foreach (var item in Model)
        {
            <div class="row">
                <div class="col-8">
                    <div class="card bg-light">
                        <div class="card-header text-muted border-bottom-0">
                            Passenger #@item.id
                        </div>
                        <div class="card-body pt-0">
                            <div class="row">
                                <div class="col-7">
                                    <h2 class="lead"><b>@item.Name @item.Surname</b></h2>
                                    <p class="text-muted text-sm"><b>Account:</b> @item.Gender / Age:24 / Worker </p>
                                    <ul class="ml-4 mb-0 fa-ul text-muted">
                                        <li class="small"><span class="fa-li"><i class="fas fa-lg fa-building"></i></span> Address: @item.HomeAddress</li>
                                        <li class="small"><span class="fa-li"><i class="fas fa-lg fa-phone"></i></span> Email:  @item.Email</li>
                                        <li class="small"><span class="fa-li"><i class="fas fa-lg fa-phone"></i></span> Phone #: +@item.Cell</li>
                                    </ul>
                                </div>
                                <div class="col-5 text-center">
                                    <img src="~/images/user1.jpg" class="img-circle img-fluid" />
                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            <div class="text-right">
                                <a href="#" class="btn btn-sm bg-teal">
                                    <i class="fas fa-comments"></i>
                                </a>
                                <a asp-action="Profille" asp-route-id="@item.id" class="btn btn-sm btn-primary">
                                    <i class="fas fa-user"></i>Profile
                                </a>


                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-3">
                    <div class="card bg-light">
                        <div class="card-header text-muted border-bottom-0">

                        </div>
                        <div class="card-body pt-0">
                            <div class="row">
                                <div class="col-12">
                                    <h2 class="lead">Trips #@item.TripID</h2>
                                    <h3 class="lead"><b>From:@item.ArrivalTime <br /> To: @item.DepartureTime</b></h3>
                                </div>
                                @if (item.TripID == 49)
                                {
                                }
                            </div>
                        </div>
                        <div class="card-footer">
                            <div class="text-right">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </table>
</div>
