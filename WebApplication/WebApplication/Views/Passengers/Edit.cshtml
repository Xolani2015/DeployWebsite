@model WebApplication.Models.Passenger

@{
    ViewData["Title"] = "Profile";
}

<h1>@ViewData["Title"]</h1>

<script>
    function SelectDriverType() {
        var selec = document.getElementById("DriverTypeId");
        var dis = selec.options[selec.selectedIndex].text;
        document.getElementById("mytext").value = dis;
    }

    function SelectGender() {
        document.getElementsByName('radio1')
            .forEach(radio => {
                if (radio.checked) {
                    document.getElementById("inGender").value = radio.value;
                }
            });
    }</script>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-3">

                <!-- Profile Image -->
                <div class="card card-primary card-outline">
                    <div class="card-body box-profile">
                        <div class="text-center">
                            <img class="profile-user-img img-fluid img-circle"
                                 src="~/images/user1.jpg"
                                 alt="User profile picture">
                        </div>
                        <h3 class="profile-username text-center"> @Html.DisplayFor(model => model.Name)  @Html.DisplayFor(model => model.Surname)</h3>
                        <p class="text-muted text-center">Passenger @Model.id</p>
                        <ul class="list-group list-group-unbordered mb-3">
                            <li class="list-group-item">
                                <b>Trips Completed</b> <a class="float-right">204</a>
                            </li>
                            <li class="list-group-item">
                                <b>Amount Due</b> <a class="float-right">R543.00</a>
                            </li>
                            <li class="list-group-item">
                                <b>Ratings</b> <a class="float-right">3/10 Stars</a>
                            </li>
                        </ul>
                        <form asp-action="Delete">
                            <input type="hidden" asp-for="id" />
                            <input type="submit" style="width:180px" value="UPDATE" class="btn btn-success" />
                        </form>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
                <!-- About Me Box -->
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Passenger</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <strong><i class="fas fa-book mr-1"></i> detail submitted</strong>

                        <p class="text-muted">
                            Documents recieved
                        </p>
                        <hr>
                        <strong><i class="fas fa-map-marker-alt mr-1"></i> Location</strong>
                        <p class="text-muted">Johanesburg</p>
                        <hr>
                        <strong><i class="fas fa-pencil-alt mr-1"></i> Skills</strong>
                     </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
            <div class="col-md-9">
                <div class="card">
                    <div class="card-header p-2">
                        <ul class="nav nav-pills">
                            <li class="nav-item"><a asp-action="Profile" asp-route-id="@Model.id" class="nav-link">Activity</a></li>
                            <li class="nav-item"><a class="nav-link" href="#Trip" data-toggle="tab">Trip</a></li>
                            <li class="nav-item"><a asp-action="Trip" class="nav-link">Reports</a></li>
                        </ul>
                    </div>
                    <!-- /.card-header -->


                    <div class="card card-blue">
                        <div class="card-header">
                            <h3 class="card-title">UPDATE DETAILS FOR PASSENGER #@Model.id</h3>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <form role="form" asp-action="Edit">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="row">
                                    <div class="col-sm-6">
                                        <!-- text input -->
                                        <div class="form-group">
                                            <label asp-for="Name" class="control-lable"></label>
                                            <input type="text" asp-for="Name" class="form-control" placeholder="Enter Name">
                                            <span asp-validation-for="Name" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <label asp-for="Surname" class="control-lable"></label>
                                            <input type="text" asp-for="Surname" class="form-control" placeholder="Enter Name">
                                            <span asp-validation-for="Surname" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-sm-6">
                                        <label>Gender</label>
                                        <!-- text input -->
                                        <div class="form-check">
                                            @Html.RadioButtonFor(model => model.Gender, "Male") Male
                                        </div>
                                        <div class="form-check">
                                            @Html.RadioButtonFor(model => model.Gender, "Female") Female
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <label>User-Type</label>
                                        <select class="form-control" disabled>
                                            <option>Passenger</option>
                                        </select>
                                    </div>
                                </div>

                                <!-- input states -->
                                <div class="row">
                                    <div class="col-sm-6">
                                        <!-- text input -->
                                        <div class="form-group">
                                            <label asp-for="BirthDate" class="control-lable"></label>
                                            <input type="text" asp-for="BirthDate" class="form-control" placeholder="Birth Date">
                                            <span asp-validation-for="BirthDate" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <label asp-for="HomeAddress" class="control-lable"></label>
                                            <input type="text" asp-for="HomeAddress" class="form-control" placeholder="Home Address">
                                            <span asp-validation-for="HomeAddress" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-4">
                                        <!-- text input -->
                                        <div class="form-group">
                                            <label asp-for="Email" class="control-lable"></label>
                                            <input type="text" asp-for="Email" class="form-control" placeholder="Email address">
                                            <span asp-validation-for="Email" class="text-danger"></span>
                                        </div>
                                        <!-- text input -->

                                    </div>
                                    <div class="col-sm-4">
                                        <!-- text input -->
                                        <div class="form-group">
                                            <label asp-for="Cell" class="control-lable"></label>
                                            <input type="text" asp-for="Cell" class="form-control" placeholder="Cell Number">
                                            <span asp-validation-for="Cell" class="text-danger"></span>
                                        </div>
                                        <!-- text input -->

                                    </div>
                                    <div class="col-sm-4">
                                        <div class="form-group">
                                            <label>Passenger-Type</label>
                                            <select class="form-control" id="DriverTypeId" onchange="SelectDriverType();">
                                                <option>Worker-Passenger</option>
                                                <option>Schoolar-Passenger</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-4">


                                        <div class="form-group">
                                            <label>Selected Choice</label>
                                            <input type="text" id="mytext" class="form-control" placeholder="Enter ">
                                        </div>
                                    </div>
                                    <div class="col-sm-4">
                                        <div class="form-group">
                                            <label asp-for="PickUpLocation" class="control-lable"></label>
                                            <input type="text" asp-for="PickUpLocation" class="form-control" placeholder="Pick up location">
                                            <span asp-validation-for="PickUpLocation" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-sm-4">
                                        <div class="form-group">
                                            <label asp-for="DropOffLocation" class="control-lable"></label>
                                            <input type="text" asp-for="DropOffLocation" class="form-control" placeholder="Drop off location">
                                            <span asp-validation-for="DropOffLocation" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <input type="submit" value="Update record" class="btn btn-success" />
                                <a asp-action="Profile" asp-route-id="@Model.id" class="btn btn-danger">Cancel</a>
                            </form>
                        </div>
                        <!-- /.card-body -->
                    </div>


                    <!-- /.card-body -->
                </div>
                <!-- /.nav-tabs-custom -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div><!-- /.container-fluid -->
</section>


